<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overlay_dark">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:orientation="horizontal"
        android:background="@drawable/gradient_top"
        android:padding="@dimen/spacing_medium"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Channel Logo Placeholder -->
        <View
            android:id="@+id/channelLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:background="@color/surface_light"/>

        <!-- Channel Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvChannelName"
                style="@style/TitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Channel Name"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/tvCurrentTime"
                style="@style/CaptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13:35  03.11.26"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

        <!-- HD/SD Badge -->
        <TextView
            android:id="@+id/tvQualityBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quality_hd"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:background="@drawable/badge_hd"
            android:layout_marginEnd="@dimen/spacing_medium"/>

        <!-- Channel Number -->
        <TextView
            android:id="@+id/tvChannelNumber"
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="32sp"/>

    </LinearLayout>

    <!-- Center Controls -->
    <LinearLayout
        android:id="@+id/centerControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Rewind 5 minutes -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="8dp">

            <ImageButton
                android:id="@+id/btnRewind5m"
                style="@style/SmallControlButton"
                android:src="@drawable/ic_rewind"
                android:contentDescription="Rewind 5 minutes"/>

            <TextView
                style="@style/CaptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/control_rewind_5m"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Rewind 1 minute -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="8dp">

            <ImageButton
                android:id="@+id/btnRewind1m"
                style="@style/SmallControlButton"
                android:src="@drawable/ic_rewind"
                android:contentDescription="Rewind 1 minute"/>

            <TextView
                style="@style/CaptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/control_rewind_1m"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Rewind 15 seconds -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="8dp">

            <ImageButton
                android:id="@+id/btnRewind15s"
                style="@style/SmallControlButton"
                android:src="@drawable/ic_rewind"
                android:contentDescription="Rewind 15 seconds"/>

            <TextView
                style="@style/CaptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/control_rewind_15s"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Play/Pause -->
        <ImageButton
            android:id="@+id/btnPlayPause"
            style="@style/ControlButton"
            android:src="@drawable/ic_pause"
            android:contentDescription="Play/Pause"
            android:layout_margin="@dimen/spacing_medium"/>

        <!-- Forward 15 seconds -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="8dp">

            <ImageButton
                android:id="@+id/btnForward15s"
                style="@style/SmallControlButton"
                android:src="@drawable/ic_fast_forward"
                android:contentDescription="Forward 15 seconds"/>

            <TextView
                style="@style/CaptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/control_forward_15s"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Forward 1 minute -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="8dp">

            <ImageButton
                android:id="@+id/btnForward1m"
                style="@style/SmallControlButton"
                android:src="@drawable/ic_fast_forward"
                android:contentDescription="Forward 1 minute"/>

            <TextView
                style="@style/CaptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/control_forward_1m"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Forward 5 minutes -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="8dp">

            <ImageButton
                android:id="@+id/btnForward5m"
                style="@style/SmallControlButton"
                android:src="@drawable/ic_fast_forward"
                android:contentDescription="Forward 5 minutes"/>

            <TextView
                style="@style/CaptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/control_forward_5m"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Bar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_bottom"
        android:padding="@dimen/spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Program Info and Controls Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_small">

            <!-- Time Rewind Button -->
            <ImageButton
                android:id="@+id/btnTimeRewind"
                style="@style/SmallControlButton"
                android:src="@drawable/ic_time"
                android:contentDescription="Time Rewind"
                android:layout_marginEnd="@dimen/spacing_medium"/>

            <!-- Program Title and Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvProgramTitle"
                    style="@style/BodyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="world economic forum"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tvProgramTime"
                    style="@style/CaptionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:15 - 15:30"
                    android:layout_marginTop="2dp"/>

            </LinearLayout>

            <!-- Live Button -->
            <LinearLayout
                android:id="@+id/btnLive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/control_button_background"
                android:padding="12dp"
                android:gravity="center"
                android:layout_marginStart="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_small"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <View
                    android:id="@+id/liveIndicator"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/live_indicator"
                    android:layout_marginEnd="6dp"/>

                <TextView
                    style="@style/BodyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/control_live"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

            </LinearLayout>

            <!-- Favorite Button -->
            <ImageButton
                android:id="@+id/btnFavorite"
                style="@style/SmallControlButton"
                android:src="@drawable/ic_star_outline"
                android:contentDescription="Add to Favorites"/>

        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/programProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/progress_bar_height"
            android:progressDrawable="@drawable/progress_bar_drawable"
            android:progress="45"
            android:max="100"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>