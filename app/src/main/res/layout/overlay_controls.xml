<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ================================================================
         TOP BAR
         ================================================================ -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/gradient_top"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:layout_gravity="top">

        <!-- Channel Logo -->
        <ImageView
            android:id="@+id/channelLogo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="Channel Logo"/>

        <!-- Channel Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvChannelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="22sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- CENTER: Dummy Logo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MB"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:background="@drawable/ic_logo_placeholder"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>
        </LinearLayout>

        <!-- RIGHT: Channel number -->
        <TextView
            android:id="@+id/tvChannelNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_secondary"
            android:textSize="50sp"
            android:textStyle="bold"
            android:gravity="end"/>

    </LinearLayout>

    <!-- ================================================================
         BOTTOM SECTION (rewind row + bottom bar stacked at bottom)
         ================================================================ -->
    <LinearLayout
        android:id="@+id/bottomSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient_bottom">

        <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
             REWIND ROW  (15s / 1m / 5m  back + forward)
             - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
        <LinearLayout
            android:id="@+id/rewindRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="12dp"
            android:paddingBottom="4dp">

            <!-- Rewind 5m -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">
                <ImageButton
                    android:id="@+id/btnRewind5m"
                    style="@style/SmallControlButton"
                    android:src="@drawable/ic_rewind"
                    android:contentDescription="Rewind 5 minutes"
                    android:nextFocusRight="@+id/btnRewind1m"
                    android:nextFocusDown="@+id/btnPlayPause"/>
                <TextView
                    style="@style/CaptionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5m"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Rewind 1m -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">
                <ImageButton
                    android:id="@+id/btnRewind1m"
                    style="@style/SmallControlButton"
                    android:src="@drawable/ic_rewind"
                    android:contentDescription="Rewind 1 minute"
                    android:nextFocusLeft="@+id/btnRewind5m"
                    android:nextFocusRight="@+id/btnRewind15s"
                    android:nextFocusDown="@+id/btnPlayPause"/>
                <TextView
                    style="@style/CaptionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1m"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Rewind 15s -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp">
                <ImageButton
                    android:id="@+id/btnRewind15s"
                    style="@style/SmallControlButton"
                    android:src="@drawable/ic_rewind"
                    android:contentDescription="Rewind 15 seconds"
                    android:nextFocusLeft="@+id/btnRewind1m"
                    android:nextFocusRight="@+id/btnPlayPause"
                    android:nextFocusDown="@+id/btnPlayPause"/>
                <TextView
                    style="@style/CaptionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15s"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Play/Pause - center, biggest -->
            <ImageButton
                android:id="@+id/btnPlayPause"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/control_button_background"
                android:src="@drawable/ic_pause"
                android:scaleType="centerInside"
                android:padding="14dp"
                android:contentDescription="Play/Pause"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:nextFocusLeft="@+id/btnRewind15s"
                android:nextFocusRight="@+id/btnForward15s"
                android:nextFocusUp="@+id/btnPlayPause"
                android:nextFocusDown="@+id/btnLive"/>

            <!-- Forward 15s -->
            <LinearLayout
                android:id="@+id/layoutForward15s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp">
                <ImageButton
                    android:id="@+id/btnForward15s"
                    style="@style/SmallControlButton"
                    android:src="@drawable/ic_fast_forward"
                    android:contentDescription="Forward 15 seconds"
                    android:nextFocusLeft="@+id/btnPlayPause"
                    android:nextFocusRight="@+id/btnForward1m"
                    android:nextFocusDown="@+id/btnLive"/>
                <TextView
                    style="@style/CaptionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15s"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Forward 1m -->
            <LinearLayout
                android:id="@+id/layoutForward1m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">
                <ImageButton
                    android:id="@+id/btnForward1m"
                    style="@style/SmallControlButton"
                    android:src="@drawable/ic_fast_forward"
                    android:contentDescription="Forward 1 minute"
                    android:nextFocusLeft="@+id/btnForward15s"
                    android:nextFocusRight="@+id/btnForward5m"
                    android:nextFocusDown="@+id/btnLive"/>
                <TextView
                    style="@style/CaptionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1m"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Forward 5m -->
            <LinearLayout
                android:id="@+id/layoutForward5m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/btnForward5m"
                    style="@style/SmallControlButton"
                    android:src="@drawable/ic_fast_forward"
                    android:contentDescription="Forward 5 minutes"
                    android:nextFocusLeft="@+id/btnForward1m"
                    android:nextFocusDown="@+id/btnLive"/>
                <TextView
                    style="@style/CaptionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5m"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Thin divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33FFFFFF"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="0dp"/>

        <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
             BOTTOM BAR  (program info + action buttons)
             - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="10dp"
            android:paddingBottom="16dp">

            <!-- Row: program info (left) + action buttons (right) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <!-- Program info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvProgramTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/tvProgramTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>

                <!-- Action buttons on the RIGHT -->
                <!-- Live button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnLive"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_marginStart="12dp"
                    app:cardBackgroundColor="@color/live_red"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:nextFocusUp="@+id/btnPlayPause"
                    android:nextFocusRight="@+id/btnTimeRewind">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp">

                        <!-- Broadcast icon (shown when NOT live) -->
                        <ImageView
                            android:id="@+id/ivLiveBroadcastIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_broadcast"
                            android:visibility="gone"
                            android:layout_marginEnd="4dp"
                            android:contentDescription="Broadcast"/>

                        <!-- LIVE text (shown when live) -->
                        <TextView
                            android:id="@+id/tvLiveLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LIVE"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="13sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Exact time rewind button -->
                <ImageButton
                    android:id="@+id/btnTimeRewind"
                    style="@style/SmallControlButton"
                    android:src="@drawable/ic_time"
                    android:layout_marginStart="10dp"
                    android:contentDescription="Jump to time"
                    android:nextFocusUp="@+id/btnPlayPause"
                    android:nextFocusLeft="@+id/btnLive"
                    android:nextFocusRight="@+id/btnFavorite"/>

                <!-- Favorites button -->
                <ImageButton
                    android:id="@+id/btnFavorite"
                    style="@style/SmallControlButton"
                    android:src="@drawable/ic_star_outline"
                    android:layout_marginStart="10dp"
                    android:contentDescription="Toggle Favorite"
                    android:nextFocusUp="@+id/btnPlayPause"
                    android:nextFocusLeft="@+id/btnTimeRewind"
                    android:nextFocusRight="@+id/btnAudioLanguage"/>

                <!-- Audio/language switcher (dummy) -->
                <ImageButton
                    android:id="@+id/btnAudioLanguage"
                    style="@style/SmallControlButton"
                    android:src="@drawable/ic_audio_language"
                    android:layout_marginStart="10dp"
                    android:contentDescription="Audio/Language"
                    android:nextFocusUp="@+id/btnPlayPause"
                    android:nextFocusLeft="@+id/btnFavorite"/>

            </LinearLayout>

            <!-- Progress bar -->
            <ProgressBar
                android:id="@+id/programProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:progressDrawable="@drawable/progress_bar_drawable"
                android:progress="0"
                android:max="100"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>