<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/programContainer"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="@drawable/epg_program_glass_item">

    <!-- Accent bar for currently playing -->
    <View
        android:id="@+id/programAccentBar"
        android:layout_width="3dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/epg_program_accent_bar"
        android:visibility="invisible"/>

    <!-- Time — fixed width -->
    <TextView
        android:id="@+id/tvProgramTime"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="#906366F1"
        android:singleLine="true"/>

    <!-- Title — takes remaining space -->
    <TextView
        android:id="@+id/tvProgramTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="13sp"
        android:textColor="#F1F5F9"
        android:singleLine="true"
        android:ellipsize="end"/>

    <!-- Hidden description — keep for adapter compat -->
    <TextView
        android:id="@+id/tvProgramDescription"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <!-- NOW badge -->
    <TextView
        android:id="@+id/tvNowBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOW"
        android:textColor="#F1F5F9"
        android:textSize="9sp"
        android:textStyle="bold"
        android:letterSpacing="0.08"
        android:background="@drawable/epg_now_badge"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_marginStart="6dp"
        android:visibility="gone"/>

    <!-- Date — far right, e.g. "23 Feb" -->
    <TextView
        android:id="@+id/tvProgramDate"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#5094A3B8"
        android:gravity="end"
        android:singleLine="true"
        android:layout_marginStart="8dp"/>

</LinearLayout>