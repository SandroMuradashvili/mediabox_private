<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/programContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:padding="14dp"
    android:background="@drawable/epg_program_glass_item">

    <!-- Left accent line (visible for current program) -->
    <View
        android:id="@+id/programAccentBar"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="12dp"
        android:background="@drawable/epg_program_accent_bar"
        android:visibility="invisible"/>

    <!-- Program text content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Time -->
        <TextView
            android:id="@+id/tvProgramTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#806366F1"
            android:letterSpacing="0.04"
            android:layout_marginBottom="3dp"/>

        <!-- Title -->
        <TextView
            android:id="@+id/tvProgramTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#E2E8F0"
            android:maxLines="1"
            android:ellipsize="end"/>

        <!-- Description -->
        <TextView
            android:id="@+id/tvProgramDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#4D94A3B8"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

    <!-- NOW live pill (shown for current program) -->
    <TextView
        android:id="@+id/tvNowBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOW"
        android:textColor="#F1F5F9"
        android:textSize="9sp"
        android:textStyle="bold"
        android:letterSpacing="0.10"
        android:background="@drawable/epg_now_badge"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginStart="10dp"
        android:visibility="gone"/>

</LinearLayout>