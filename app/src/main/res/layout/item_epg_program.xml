<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/programContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="14dp"
    android:background="@drawable/epg_program_item_background"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- Time -->
    <TextView
        android:id="@+id/tvProgramTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13:00 - 15:00"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/primary"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tvProgramTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Program Title"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp"/>

    <!-- Description -->
    <TextView
        android:id="@+id/tvProgramDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Program description"
        android:textSize="13sp"
        android:textColor="@color/text_secondary"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="2dp"/>

</LinearLayout>