<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6000000">

    <!-- Category Bar at Top -->
    <LinearLayout
        android:id="@+id/categoryBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#DD1E293B"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories:"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:paddingStart="20dp"
            android:paddingBottom="8dp"/>

        <HorizontalScrollView
            android:id="@+id/categoryScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <LinearLayout
                android:id="@+id/categoryButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Category buttons added programmatically -->
            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

    <!-- Main Content: Channels + Programs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/transparent"
        app:layout_constraintTop_toBottomOf="@id/categoryBar"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Left: Channel List -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="0.28"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            app:cardBackgroundColor="#CC1E293B"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Channels"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:padding="16dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#33FFFFFF"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/channelList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:padding="8dp"
                    android:scrollbars="vertical"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Right: Program List -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="0.72"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#CC1E293B"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSelectedChannelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TV Programs"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:padding="16dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#33FFFFFF"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/programList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:padding="8dp"
                    android:scrollbars="vertical"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>