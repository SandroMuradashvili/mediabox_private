<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/epg_scrim_background">

    <!-- ================================================================
         GLASS CARD - full EPG container, floats over the video
         ================================================================ -->
    <androidx.cardview.widget.CardView
        android:id="@+id/epgGlassCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="28dp"
        app:cardBackgroundColor="#00000000"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/epg_glass_panel">

            <!-- ============================================================
                 HEADER ROW  –  title  +  category chips
                 ============================================================ -->
            <LinearLayout
                android:id="@+id/epgHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/epg_header_bar"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="18dp"
                android:paddingBottom="0dp">

                <!-- Title row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="14dp">

                    <!-- TV Guide icon dot -->
                    <View
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="@drawable/epg_accent_dot"
                        android:layout_marginEnd="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TV Guide"
                        android:textColor="#F1F5F9"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.08"/>

                    <!-- Subtle hint text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="← Back    →  Programs    OK  Watch"
                        android:textColor="#4D94A3B8"
                        android:textSize="11sp"/>
                </LinearLayout>

                <!-- Category chips strip -->
                <HorizontalScrollView
                    android:id="@+id/categoryScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:fadingEdgeLength="32dp"
                    android:requiresFadingEdge="horizontal">

                    <LinearLayout
                        android:id="@+id/categoryButtons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="16dp"/>

                </HorizontalScrollView>

            </LinearLayout>

            <!-- Thin glass divider line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/epg_divider_line"/>

            <!-- ============================================================
                 CONTENT ROW  –  channel list  +  programs
                 ============================================================ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- - - - - - - - - - - - - - - -
                     LEFT: Channel list
                     - - - - - - - - - - - - - - - -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.27"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/epg_left_panel">

                    <!-- Panel label -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CHANNELS"
                        android:textColor="#3D94A3B8"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.18"
                        android:paddingStart="16dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="10dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/channelList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="12dp"
                        android:scrollbars="none"/>

                </LinearLayout>

                <!-- Glass vertical divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/epg_divider_line"/>

                <!-- - - - - - - - - - - - - - - -
                     RIGHT: Programs panel / placeholder
                     - - - - - - - - - - - - - - - -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.73"
                    android:layout_height="match_parent">

                    <!-- Placeholder state -->
                    <LinearLayout
                        android:id="@+id/programPlaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="48dp"
                        android:visibility="visible">

                        <!-- Arrow icon made of views -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="›"
                            android:textColor="#1A6366F1"
                            android:textSize="96sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select a channel"
                            android:textColor="#60F1F5F9"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Press → to browse programs"
                            android:textColor="#2894A3B8"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_marginTop="8dp"/>

                    </LinearLayout>

                    <!-- Programs panel -->
                    <LinearLayout
                        android:id="@+id/programPanel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <!-- Programs header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp"
                            android:paddingTop="14dp"
                            android:paddingBottom="10dp">

                            <TextView
                                android:id="@+id/tvSelectedChannelName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="TV Programs"
                                android:textColor="#F1F5F9"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:maxLines="1"
                                android:ellipsize="end"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PROGRAMS"
                                android:textColor="#3D94A3B8"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.18"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@drawable/epg_divider_line"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/programList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clipToPadding="false"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="16dp"
                            android:scrollbars="none"/>

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>