<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/epg_scrim_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/epgGlassCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#00000000"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/epg_glass_panel">

            <!-- ============================================================
                 HEADER — title + category chips
                 ============================================================ -->
            <LinearLayout
                android:id="@+id/epgHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/epg_header_bar"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="12dp"
                android:paddingBottom="0dp">

                <!-- Title row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <View
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="@drawable/epg_accent_dot"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TV Guide"
                        android:textColor="#F1F5F9"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.06"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="← Back    →  Programs    OK  Watch"
                        android:textColor="#3394A3B8"
                        android:textSize="10sp"/>
                </LinearLayout>

                <!-- Category chips -->
                <HorizontalScrollView
                    android:id="@+id/categoryScrollView"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:fadingEdgeLength="24dp"
                    android:requiresFadingEdge="horizontal">

                    <LinearLayout
                        android:id="@+id/categoryButtons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="12dp"/>

                </HorizontalScrollView>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/epg_divider_line"/>

            <!-- ============================================================
                 CONTENT — channel list + programs
                 ============================================================ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- LEFT: Channel list -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/epg_left_panel">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CHANNELS"
                        android:textColor="#3D94A3B8"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.18"
                        android:paddingStart="14dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="6dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/channelList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:paddingBottom="8dp"
                        android:scrollbars="none"/>

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/epg_divider_line"/>

                <!-- RIGHT: Programs panel / placeholder -->
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.75"
                    android:layout_height="match_parent">

                    <!-- Placeholder -->
                    <LinearLayout
                        android:id="@+id/programPlaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingStart="48dp"
                        android:paddingEnd="48dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="80dp"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="›"
                            android:textColor="#556366F1"
                            android:textSize="120sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select a channel"
                            android:textColor="#CCF1F5F9"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Press → to browse programs"
                            android:textColor="#60B0B3F5"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"/>

                    </LinearLayout>

                    <!-- Programs panel -->
                    <LinearLayout
                        android:id="@+id/programPanel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <!-- Programs header with channel name + hovered date -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="8dp">

                            <TextView
                                android:id="@+id/tvSelectedChannelName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="TV Programs"
                                android:textColor="#F1F5F9"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:maxLines="1"
                                android:ellipsize="end"/>

                            <!-- Hovered program date display -->
                            <TextView
                                android:id="@+id/tvHoveredDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#F1F5F9"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:background="@drawable/epg_date_chip"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:visibility="gone"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@drawable/epg_divider_line"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/programList"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clipToPadding="false"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="8dp"
                            android:scrollbars="none"/>

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>