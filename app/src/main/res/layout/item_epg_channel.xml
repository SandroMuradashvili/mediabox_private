<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <!-- Selection Outline (visible when selected) -->
    <View
        android:id="@+id/selectionOutline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/epg_channel_selection_outline"
        android:visibility="gone"/>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:background="@drawable/epg_channel_item_background">

        <!-- Channel Logo -->
        <ImageView
            android:id="@+id/channelLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:layout_marginEnd="12dp"
            android:contentDescription="Channel Logo"/>

        <!-- Channel Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvChannelNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="12sp"
                android:textColor="@color/text_tertiary"/>

            <TextView
                android:id="@+id/tvChannelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Channel Name"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end"/>

        </LinearLayout>

        <!-- Favorite Star Icon -->
        <ImageView
            android:id="@+id/ivFavorite"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star"
            android:visibility="gone"
            android:layout_marginStart="8dp"
            android:contentDescription="Favorite"/>

    </LinearLayout>

</FrameLayout>