<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp">

    <!-- Selection outline (shown when highlighted) -->
    <View
        android:id="@+id/selectionOutline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/epg_channel_selection_outline"
        android:visibility="gone"/>

    <!-- Content row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/epg_channel_item_glass">

        <!-- Logo container with subtle glass bg -->
        <FrameLayout
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/epg_logo_bg">

            <ImageView
                android:id="@+id/channelLogo"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:contentDescription="Channel Logo"/>
        </FrameLayout>

        <!-- Channel info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/tvChannelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E2E8F0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvChannelNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3D94A3B8"
                android:textSize="13sp"
                android:layout_marginTop="1dp"/>

        </LinearLayout>

        <!-- Favorite star -->
        <ImageView
            android:id="@+id/ivFavorite"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_star"
            android:visibility="gone"
            android:alpha="0.7"
            android:contentDescription="Favorite"/>

    </LinearLayout>

</FrameLayout>